<div class="mt-4">
    <div class="row">
        <div class="col-lg-2">
            <a href="/"><button class="btn btn-success w-100">Back</button></a>
            <ul class="mt-4">
                <li>Description</li>
                <li>{{course.level}}</li>
            </ul>
        </div>

        <div class="col-lg-10">
            <h1>{{course.name}}</h1>
            <iframe
                width="100%"
                height="500"
                src="https://www.youtube.com/embed/{{course.videoId}}"
                title="YouTube video player"
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                referrerpolicy="strict-origin-when-cross-origin"
                allowfullscreen
            ></iframe>
            <p>{{course.description}}</p>
        </div>
    </div>
</div>
