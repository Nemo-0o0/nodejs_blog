<div class='mt-4'>
    <h3>Create Courses</h3>

    <form method='POST' action='/courses/store'>
        <div class='form-group'>
            <label for='name'>Ten khoa hoc</label>
            <input type='text' class='form-control' id='name' name='name' />
        </div>
        <div class='form-group'>
            <label for='description'>Mo ta</label>
            <input type='text' class='form-control' id='description' name='description' />
        </div>
        <div class='form-group'>
            <label for='videoId'>Video ID</label>
            <input type='text' class='form-control' id='videoId' name='videoId' />
        </div>
        <div class='form-group'>
            <label for='level'>Trinh do</label>
            <input type='text' class='form-control' id='level' name='level' />
        </div>

        <button type='submit' class='btn btn-primary'>Them Khoa Hoc</button>
    </form>
</div>